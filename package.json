{
  "name": "vite-image-to-avif-plugin",
  "version": "1.0.2",
  "description": "Automatically converts images to AVIF during Vite builds, optimizing performance with minimal effort.",
  "type": "module",
  "main": "./dist/index.cjs",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js"
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryotanakata/vite-image-to-avif-plugin.git"
  },
  "keywords": [
    "vite",
    "avif",
    "image",
    "optimization",
    "performance",
    "image converter",
    "vite plugin",
    "image optimization",
    "avif conversion",
    "image format",
    "image compression",
    "web performance"
  ],
  "author": "ryotanakata",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryotanakata/vite-image-to-avif-plugin/issues"
  },
  "homepage": "https://github.com/ryotanakata/vite-image-to-avif-plugin#readme",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "sharp": "^0.33.5",
    "p-limit": "^3.1.0"
  },
  "peerDependencies": {
    "vite": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.9",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.6"
  }
}
